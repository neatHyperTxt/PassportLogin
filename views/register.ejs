<%-include('./partials/header.ejs')%>
<h1 class="text-center mt-5">Register</h1>
<div class="row">
    <div class="col-4 offset-4">
        <form class="form-validation" action="/register" method="POST" novalidate>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input id="name" name="name" type="text" class="form-control" required>
                <div class="valid-feedback">
                    Looks Good!!!
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" type="email" class="form-control" required>
                <div class="valid-feedback">
                    Looks Good!!!
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" type="password" class="form-control" required>
                <div class="valid-feedback">
                    Looks Good!!!
                </div>
            </div>
            <div class="text-center center">
                <button type="submit" class="btn btn-primary px-3">Register</button>
                <button class="btn btn-success px-4"><a style="text-decoration: none; color: white;" href="/login">Login</a></button>
            </div>
        </form>
    </div>
</div>
<%-include('./partials/footer.ejs') %>  